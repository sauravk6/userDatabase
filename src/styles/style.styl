@import '_mixins'
@import 'styles_frame'
@import 'reset.min.css'
@import 'styles_inner.styl'
@import 'filter.css'

.main-page{
	max-width: 980px;
	margin: 0 auto;
}

a.product-link{
	text-decoration: none;
	color: #333;
}



body{
	background: #fff
	display: flex;
	justify-content: center;
	align-items : center
}
#root{
	width: 100%
}
.black{
	color: #000 !important
}

.store-image{
	width: 50px;
	height: 50px;
	border-radius: 180px;
}

.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 40%;
}

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
    width: 60%;
    margin-top: 20px;
    padding: 10px
	margin: auto;
	background: #fff
	box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    height: 400px;
    overflow-y: auto
    text-align: center
    background: #f6f6f6
}



